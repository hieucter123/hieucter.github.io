@model quanlydongho.Models.KhachHang

@{
    ViewBag.Title = "Thông tin người dùng";
}

<h2>Thông tin người dùng</h2>

<div class="user-profile">
    <div class="form-group">
        <label for="TK">Tên đăng nhập:</label>
        <p>@Model.TK</p>
    </div>

    <div class="form-group">
