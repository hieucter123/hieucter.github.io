@model quanlydongho.Models.KhachHang

@{
    ViewBag.Title = "Xóa Khách Hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Xóa Khách Hàng</h2>

    <h3 class="text-center">Bạn có chắc chắn muốn xóa khách hàng này?</h3>

    <div>
        <h4>Thông Tin Khách Hàng</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Email)</dt>
            <dd>@Html.DisplayFor(model => model.Email)</dd>

            <dt>@Html.DisplayNameFor(model => model.MatKhau)</dt>
            <dd>@Html.DisplayFor(model => model.MatKhau)</dd>
        </dl>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions text-center">
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    }
</div>
