@model quanlydongho.Models.DanhMuc
@{
    ViewBag.Title = "Xóa Danh Mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Xóa Danh Mục</h2>

<p>Bạn có chắc chắn muốn xóa danh mục <strong>@Model.TenDanhMuc</strong>?</p>

@using (Html.BeginForm("DeleteDanhMucConfirmed", "Admins", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Xóa</button>
    @Html.ActionLink("Hủy", "DanhMucs", "Admins", null, new { @class = "btn btn-secondary" })
}
