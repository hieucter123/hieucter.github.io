@model quanlydongho.Models.DonHang

@{
    ViewBag.Title = "Sửa Trạng Thái Đơn Hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Cập nhật trạng thái đơn hàng</h2>

    @using (Html.BeginForm("EditOrder", "Admins", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.Label("Trạng Thái", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList(
                "TrangThai",
                new SelectList(new[] { "Chờ xác nhận", "Đã giao", "Đã hủy" }, Model.TrangThai),
                htmlAttributes: new { @class = "form-control" }
            )
        </div>

        <button type="submit" class="btn btn-primary mt-3">Cập nhật</button>
    }

    <a href="@Url.Action("ManageOrders", "Admins")" class="btn btn-secondary mt-3">Quay lại</a>
</div>
