@model quanlydongho.Models.DonHang
@{
    ViewBag.Title = "Xóa Đơn Hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Xóa Đơn Hàng</h2>

    <p>Bạn có chắc chắn muốn xóa đơn hàng này không?</p>

    <div class="mb-3">
        <strong>Mã Đơn Hàng: </strong> @Model.Ma
    </div>
    <div class="mb-3">
        <strong>Ngày Đặt: </strong> @Model.NgayDat.ToString("dd/MM/yyyy")
    </div>
    <div class="mb-3">
        <strong>Trạng Thái: </strong> @Model.TrangThai
    </div>

    @using (Html.BeginForm("DeleteOrderConfirmed", "Admins", new { id = Model.Ma }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Xóa</button>
    }

    <a href="@Url.Action("ManageOrders", "Admins")" class="btn btn-secondary mt-3">Quay lại</a>
</div>
