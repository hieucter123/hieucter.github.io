@model IEnumerable<quanlydongho.Models.SanPham>

@{
    ViewBag.Title = "Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Danh Sách Sản Phẩm</h2>

<p class="text-center">
    @Html.ActionLink("Thêm Sản Phẩm Mới", "Create", "Admins", null, new { @class = "btn btn-success" })
</p>

<div class="row">
    @foreach (var item in Model) {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img class="card-img-top" src="@Url.Content("~/Images/" + item.HinhAnh)" alt="Ảnh sản phẩm" style="height: 250px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@item.TenDongHo</h5>
                    <p class="card-text">@item.MoTa</p>
                    <p class="card-text">
                        <strong>Giá:</strong> @item.GiaBanLe.ToString("N0") đ
                    </p>
                    <p class="card-text">
                        <strong>Đối Tượng:</strong> @item.DoiTuong
                    </p>
                    <p class="card-text">
                        <strong>Danh Mục:</strong> @item.DanhMuc.TenDanhMuc
                    </p>

                    <!-- Buttons for detail and add to cart -->
                    <div class="d-flex justify-content-between align-items-center">
                        @Html.ActionLink("Xem Chi Tiết", "Details", "SanPhams", new { id = item.Ma }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Thêm Vào Giỏ", "AddToCart", "Cart", new { id = item.Ma }, new { @class = "btn btn-primary btn-sm" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>
