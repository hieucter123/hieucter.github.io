@model quanlydongho.Models.Admin

@{
    ViewBag.Title = "Xóa Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Xóa Admin</h2>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Thông Tin Admin</h4>
            <hr />

            <dl class="row">
                <!-- Email -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <!-- MatKhau -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MatKhau)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MatKhau)
                </dd>
            </dl>

            <p class="text-danger">Bạn có chắc chắn muốn xóa Admin này không?</p>
        </div>
    </div>

    <div class="text-center mt-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger me-2">Xóa</button>
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
        }
    </div>
</div>
