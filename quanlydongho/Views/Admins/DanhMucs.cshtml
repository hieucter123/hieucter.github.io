@model IEnumerable<quanlydongho.Models.DanhMuc>
@{
    ViewBag.Title = "Quản lý Danh Mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Quản lý Danh Mục</h2>

<p>
    @Html.ActionLink("Thêm Danh Mục", "CreateDanhMuc", "Admins", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Tên Danh Mục</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenDanhMuc</td>
                <td>
                    <!-- Thêm các hành động cho phép xem chi tiết, chỉnh sửa hoặc xóa danh mục -->
                    @Html.ActionLink("Chi Tiết", "DetailsDanhMuc", "Admins", new { id = item.MaDanhMuc }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Chỉnh Sửa", "EditDanhMuc", "Admins", new { id = item.MaDanhMuc }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Xóa", "DeleteDanhMuc", "Admins", new { id = item.MaDanhMuc }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
