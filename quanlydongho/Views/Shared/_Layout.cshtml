<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cửa hàng đồng hồ Cloud</title>
    <link rel="stylesheet" href="~/Content/style.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f8f8;
        }

        .dropdown-menu {
            background-color: burlywood !important;
        }

        .images-icon {
            border-radius: 40px;
            border: none;
            outline: none;
            cursor: pointer;
        }

        .dropdown-item {
            background-color: burlywood;
        }

            .dropdown-item:hover {
                background-color: lightgreen;
                color: white;
            }

        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
        }

        .nav-item.dropdown .dropdown-menu {
            display: none;
        }

        footer {
            text-align: center;
            padding: 20px 0;
            background-color: #222;
        }

            footer p {
                margin: 5px 0;
                color: #ccc;
            }

        .navbar-nav {
            justify-content: center;
        }

        .nav-item.dropdown {
            position: relative;
        }

        .card {
            margin: 15px 0;
        }

            .card img {
                object-fit: cover;
                height: 200px;
            }

            .card .btn {
                background-color: #6f4f37;
                border: none;
            }

                .card .btn:hover {
                    background-color: #5c3b2c;
                }

        .search-box {
            position: relative;
        }

            .search-box input[type="text"] {
                padding: 5px 10px;
                border-radius: 4px;
                border: 1px solid #ccc;
            }

            .search-box .search-icon {
                position: absolute;
                right: 8px;
                top: 50%;
                transform: translateY(-50%);
                color: #666;
                cursor: pointer;
            }

        .input-group {
            max-width: 400px;
        }

            .input-group input[type="text"] {
                border-right: none;
            }

            .input-group button {
                border-left: none;
                border-radius: 0 4px 4px 0;
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="background-color: #2c3d51;">
        <div class="container">
            <!-- Logo -->
            <a href="@Url.Action("Index", "SanPhams")" class="navbar-brand">
                <img class="images-icon" src="@Url.Content("~/Images/logo.jpg")" alt="Logo" style="width: 100px;" />
            </a>
            <!-- Navbar toggler button for mobile view -->
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Navbar links -->
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-center">
                <ul class="navbar-nav flex-grow-1 text-center">
                    <li>
                        <a href="@Url.Action("Index", "SanPhams")" class="nav-link">
                            <i class="fas fa-box"></i> Sản phẩm
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Cart", "SanPhams")" class="nav-link">
                            <i class="fas fa-shopping-cart"></i> Giỏ hàng
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact", "Home")" class="nav-link">
                            <i class="fas fa-phone-alt"></i> Liên hệ
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("About", "Home")" class="nav-link">
                            <i class="fas fa-info-circle"></i> Về chúng tôi
                        </a>
                    </li>
                    <li class="nav-item">
                        @if (Session["User"] != null)
                        {
                            <a class="nav-link" href="@Url.Action("Profile", "SanPhams")">
                                Xin chào, @Session["User"]
                            </a>
                        }
                        else
                        {
                            <a class="nav-link" href="@Url.Action("Login", "SanPhams")">
                                <i class="fas fa-user"></i>
                            </a>
                        }
                    </li>

                </ul>
                <!-- Search form -->
                <form class="d-flex search-box ms-3" method="get" action="@Url.Action("Index", "SanPhams")">
                    <div class="input-group">
                        <input type="text" name="searchQuery" placeholder="Tìm kiếm..." value="@Request.QueryString["searchQuery"]" class="form-control" />
                        <button class="btn btn-outline-secondary" type="submit" id="button-search">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </nav>

    <!-- Content body -->
    @RenderBody()

    <!-- Footer -->
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Cửa hàng đồng hồ Cloud</p>
        <p>Địa chỉ: 126 Đường Lạc Long Quân, Quận 8, Thành phố HCM</p>
        <p>Điện thoại: 0943 612 152</p>
        <p>Email: lienhe@cuahangdongho.com</p>
    </footer>

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>

    </script>
</body>
</html>
